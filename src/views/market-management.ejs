                    <tbody class="max-h-72 ">
                        <% results.forEach((asset, index) => { %>
                          <tr id="asset_<%= asset.asset_id %>" class="asset_item bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <td class="hidden asset_id"><%= asset.asset_id %></td>
